[{
  "tags": "misc_utils",
  "block": [
    {
      "name": "Install jsont",
      "ansible.builtin.copy": {
        "src": "jsont",
        "dest": "/usr/local/bin/jsont",
        "owner": "root",
        "group": "root",
        "mode": "0755",
        "backup": "yes"
      },
      "become": "yes"
    },
    {
      "name": "Install ntpq",
      "ansible.builtin.copy": {
        "src": "ntpq",
        "dest": "/usr/local/bin/ntpq",
        "owner": "root",
        "group": "root",
        "mode": "0755",
        "backup": "yes"
      },
      "become": "yes"
    }
  ]
}]
