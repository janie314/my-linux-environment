[core]
 pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[credential]
  helper = cache
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[push]
  default = current
[pull]
  ff = only
[global]
	[user]
  email = '{{ email }}'
  name = '12ball'
[color]
  ui = true
[rebase]
  autosquash = true
[pager]
  branch = false
[fetch]
  prune = true
