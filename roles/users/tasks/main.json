[{
  "tags": "users",
  "block": [
    {
      "name": "Create janie user in wheel group",
      "ansible.builtin.user": {
        "name": "{{ user }}",
        "groups": [
          "wheel"
        ],
        "home": "{{ home_dir }}",
        "generate_ssh_key": true,
        "append": true,
        "shell": "/bin/zsh",
        "ssh_key_type": "ed25519"
      },
      "become": "yes"
    },
    {
      "name": "create $HOME/.local/bin/",
      "ansible.builtin.file": {
        "path": "/home/{{ user }}/.local/bin/",
        "state": "directory",
        "mode": "0700"
      }
    },
    {
      "name": "create $HOME/.config/",
      "ansible.builtin.file": {
        "path": "/home/{{ user }}/.config/",
        "state": "directory",
        "mode": "0755"
      }
    },
    {
      "name": "create $HOME/.config/sway/",
      "ansible.builtin.file": {
        "path": "/home/{{ user }}/.config/sway/",
        "state": "directory",
        "mode": "0755"
      }
    },
    {
      "name": "Set root user settings",
      "ansible.builtin.user": {
        "name": "root",
        "shell": "/bin/zsh"
      },
      "become": "yes"
    },
    {
      "name": "Install user's vimrc",
      "ansible.builtin.copy": {
        "src": "vimrc",
        "dest": "/home/{{ user }}/.vimrc",
        "owner": "{{ user }}",
        "group": "{{ user }}",
        "mode": "0644",
        "backup": "yes"
      },
      "become": "yes"
    },
    {
      "name": "Install user's zshrc",
      "ansible.builtin.copy": {
        "src": "zshrc",
        "dest": "/home/{{ user }}/.zshrc",
        "owner": "{{ user }}",
        "group": "{{ user }}",
        "mode": "0644",
        "backup": "yes"
      },
      "become": "yes"
    },

    {
      "name": "Install root user's .zshrc",
      "ansible.builtin.copy": {
        "src": "zshrc",
        "dest": "/root/.zshrc",
        "owner": "root",
        "group": "root",
        "mode": "0644",
        "backup": "yes"
      },
      "become": "yes"
    },
    {
      "name": "Install user's .tmux.conf",
      "ansible.builtin.copy": {
        "src": "tmux.conf",
        "dest": "/home/{{ user }}/.tmux.conf",
        "owner": "{{ user }}",
        "group": "{{ user }}",
        "mode": "0644",
        "backup": "yes"
      }
    },
    {
      "name": "Install user's .gitconfig",
      "ansible.builtin.template": {
        "src": "gitconfig",
        "dest": "/home/{{ user }}/.gitconfig",
        "owner": "{{ user }}",
        "group": "{{ user }}",
        "mode": "0644",
        "backup": "yes"
      }
    }
  ]
}]
