[{
  "tags": "dnf",
  "block": [
    {
      "name": "Install EPEL",
      "ansible.builtin.package": {
        "name": [
          "epel-release"
        ],
        "state": "latest"
      },
      "become": "yes",
      "when": "ansible_facts['distribution']|lower == 'rocky'"
    },
    {
      "name": "Install DNF packages",
      "ansible.builtin.package": {
        "name": [
          "caddy",
          "ed",
          "zsh",
          "git",
          "sqlite",
          "pandoc",
          "rsync",
          "tar",
          "tmux",
          "unzip",
          "vim",
          "alacritty",
          "clang",
          "openssl-devel",
          "libffi-devel",
          "libyaml-devel",
          "zlib-devel",
          "perl"
        ],
        "state": "latest"
      },
      "become": "yes",
      "when": "ansible_facts['os_family']|lower == 'redhat'"
    }
  ]
}]
